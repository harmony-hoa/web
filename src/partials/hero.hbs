<section
    class="my-6 bg-repeat-x bg-bottom bg-middle"
    style="background-image: url(assets/houses-bgd.svg); background-size: 300px;">
    <div class="max-w-7xl mx-auto space-y-3 px-4">
        <h1 class="text-4xl font-serif">
            Community <br />
            <span id="words-container" class="hidden">
                <em>Payment</em>
                <em>Social</em>
                <em>Vendor</em>
                <em>Thrive</em>
                <em>AI</em>
            </span>
            <em id="typing-text" class="text-yellow-500"></em>
            Platform
        </h1>

        <div class="flex gap-6">
            <div class="space-y-3">
                <p>The most comprehensive and innovative community platform
                    focused on community wellbeing and harmony instead of policing and division. </p>

                <p>Next level technology fusion of accessibility, proptech, fintech, social,
                    blockchain and AI, laser focused to help your community to thrive. </p>

                <p>
                    <button class="btn btn-primary">
                        Book Now
                    </button>
                </p>

                <div class="h-16"></div>
            </div>

            <div role="presentation" class="relative shrink-0 w-1/3 self-end mt-8 mx-8 hidden sm:block">
                <img src="assets/house-picture.svg" alt="house">
                <img src="assets/balloon.svg"
                    class="w-1/5 absolute animate-randomFloat top-0 right-0"
                    alt="ballon">
            </div>
        </div>
    </div>
</section>

<script>
(function () {
    const typingText = document.getElementById('typing-text');
    const words = document.getElementById('words-container').getElementsByTagName('em');
    let wordIndex = 0;
    let charIndex = 0;
    let isDeleting = false;

    function typeWord() {
        const currentWord = words[wordIndex].innerText;
        const diff = isDeleting ? -1 : 1;
        typingText.textContent = currentWord.substring(0, charIndex + diff);
        charIndex = charIndex + diff;

        if (!isDeleting && charIndex === currentWord.length) {
            if (wordIndex === words.length - 1) return;
            isDeleting = true;
            setTimeout(typeWord, 1500);
        }
        else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            wordIndex++;
            setTimeout(typeWord, 500);
        }
        else {
            setTimeout(typeWord, isDeleting ? 100 : 200);
        }
    }
    typeWord();
})();
</script>

